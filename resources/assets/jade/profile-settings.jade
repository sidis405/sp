extends master

block title
	title Sito Pubblico

include partials/mixins

block content

	.page-bg.news-bg.holderjs

	include partials/header
	
	.container
		.l-profile-settings-page

			h1.page-title Impostazioni

			.profile-settings-panel(role="tab-panel")
				ul.nav.nav-tabs
					li.active(role='presentation')
						a(href='#tab1', aria-controls="tab1", role="tab", data-toggle="tab") Tab 1
					li(role='presentation')
						a(href='#tab2', aria-controls="tab2", role="tab", data-toggle="tab") Tab 2
					li(role='presentation')
						a(href='#tab3', aria-controls="tab3", role="tab", data-toggle="tab") Tab 3
					li(role='presentation')
						a(href='#tab4', aria-controls="tab4", role="tab", data-toggle="tab") Tab 4

				.tab-content
					#tab1.tab-pane.active(role="tabpanel")
						.row
							.col-sm-8
								
								.input-block
									h4 Dati Personali
									.form-group
										label Nome
										input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Nome")
									.form-group
										label Nickname
										input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Nickname")
									.form-group
										label Email
										input.form-control(type='email' name='' value='' required='required' pattern='' title='', placeholder="Email")
								
								.input-block
									h4 Link Personali
									.row
										.col-sm-6
											.form-group
												label Facebook
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Facebook")
											.form-group
												label Google
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Google")
										.col-sm-6
											.form-group
												label Twitter
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Twitter")
											.form-group
												label Website
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Sito Personale")
								.input-block
									h4 Descrizione personale
									.row
										.col-sm-12
											textarea.form-control(name='' rows='3' required='required')
								.input-block
									h4 Metodo di pagamento
									.payment-method-box
										.row
											.col-sm-3
												.radio-inline
													label(for="paypal-method")
														input#paypal-method(type='radio' name='pay-method' value='paypal')
														|  Paypal
											.col-sm-3
												.radio-inline
													label(for="iban-method")
														input#iban-method(type='radio' name='pay-method' value='iban' checked='checked')
														| IBAN
								.input-block
									h4 Intestatario conto IBAN
									.row
										.col-sm-12
											.form-group
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Nome")
											.form-group
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="Cognome")
											.form-group
												input.form-control(type='text' name='' value='' required='required' pattern='' title='', placeholder="IBAN")

									.btn.btn-primary.pull-right
										i.fa.fa-save
										| &nbsp; Salva
									.btn.btn-default.pull-right
										i.fa.fa-close
										| &nbsp; Annulla

									br

							.col-sm-4
								.profile-pic-settings-box
									img(data-src="holder.js/100px320").img-responsive

					#tab2.tab-pane(role="tabpanel") ...

					#tab3.tab-pane(role="tabpanel") ...

					#tab4.tab-pane(role="tabpanel") ...

	include partials/footer
